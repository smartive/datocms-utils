{
  "compilerOptions": {
    "declaration": true,
    "outDir": "./dist/",
    "rootDirs": ["./src"],
    "sourceMap": true,
    "strict": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "module": "esnext",
    "target": "esnext"
  },
  "include": ["./src/**/*"]
}
